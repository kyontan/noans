@charset "utf-8";
/* 基準:16px
10px:63%     11px:69%       12px:75%
13px:81.5%    14px:88%      15px:94%
16px:100%     17px:106.3%  18px:112.5%
19px:119%     20px:125%     21px:131.3%
22px:137.5%   23px:144%    24px:150%
25px:156.3%   26px:162.5%
*/
* {
  font-family: 'Hiragino Kaku Gothic Pro', Meiryo, 'MS PGothic', sans-serif;
  color: #333;
  font-size: 16px;
}
* html {
  font-size: 100%;
}
*:first-child + html {
  font-size: 100%;
}
body {
  background-image: url(./akari.png);
  position: relative;
  background-repeat: no-repeat;
  background-position: right bottom;
  background-attachment: fixed;
  background-size: auto 320px;
  margin: 15px auto 0 auto;
  width: 630px;
  border: 5px solid #c8efdc;
  border-radius: 8px;
}
/* ----------- 定形 ----------- */
a {
  color: #007b43;
}
ul,
ol {
  margin: 0;
}
del {
  text-decoration: line-through;
}
i {
  font-style: italic;
}
b {
  font-weight: bold;
}
.clearfix:after {
  content: "";
  display: block;
  clear: both;
}
/* ----------- ヘッダー ----------- */
header {
  background-color: #29905e;
  border-radius: 4px;
  padding: 8px;
  margin-bottom: 8px;
}
header * {
  color: #fcfaf5;
}
header #right {
  position: absolute;
  right: 8px;
  top: 2px;
  text-align: right;
}
#title {
  font-size: 150%;
}
#logout {
  font-size: 81.5%;
  color: #CCC;
}
/* ----------- 枠 ----------- */
.center {
  margin: 0 auto;
  width: 400px;
}
.titleD {
  margin: -15px auto auto 10px;
}
.titleD .titleS {
  font-size: 88%;
  background: white;
  width: auto;
}
/* ----------- フォーム ----------- */
form {
  padding: 10px;
}
form label {
  display: block;
  float: left;
  width: 100px;
}
form input[type=submit] {
  float: right;
}
.form {
  margin: 15px 5px;
  border: 2px solid;
  border-radius: 8px;
  padding: 3px 5px;
}
#login,
#register {
  /*
	input[type=password] {
		margin: 2px inherit;
		width: 180px;
		//float: none;
	}
	*/

}
#login form,
#register form {
  margin: 10px 10px 0 100px;
}
#login label,
#register label {
  width: 180px;
}
#login input[type=submit],
#register input[type=submit] {
  float: none;
}
#login input[type=text],
#register input[type=text],
#login input[type=password],
#register input[type=password] {
  width: 200px;
}
#login #user,
#register #user,
#login #pass,
#register #pass {
  font-size: 125%;
  vertical-align: middle;
  margin: 2px inherit;
}
#register {
  padding: 0;
}
#register form {
  width: 400px;
  margin: 0 auto;
}
textarea {
  font-size: 75%;
  width: 100%;
  resize: none;
}
#postmes [type=text] {
  width: 100%;
  margin: 5px auto;
}
/* -----------投稿表示 ----------- */
#posts {
  font-size: 88%;
  margin: 8px 20px;
}
#karipost {
  margin-left: 20px;
}
/* -----------フッター ----------- */
hr {
  border: 0;
  height: 0;
  border-top: 1px dashed rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}
footer * {
  font-size: 81.5%;
  padding: 8px 2px 2px 8px;
}
footer #author {
  text-align: right;
  position: absolute;
  right: 0;
  bottom: 3px;
}
/* -----------Super Simple CSS Buttons ----------- */
/* http://devgrow.com/examples/cssbuttons/ */
.button {
  margin-left: 5px;
  padding: 5px 10px;
  display: inline;
  background: #777777 url(button.png) repeat-x bottom;
  border: none;
  color: #fff;
  cursor: pointer;
  font-weight: bold;
  border-radius: 5px;
  -moz-border-radius: 5px;
  text-shadow: 1px 1px #666;
}
.button:hover {
  background-position: 0 center;
}
.button:active {
  background-position: 0 top;
  position: relative;
  top: 1px;
  padding: 6px 10px 4px;
}
.button .red {
  background-color: #e50000;
}
.button .green {
  background-color: #58aa00;
}
.button .blue {
  background-color: #2c6da0;
}
.button .white {
  background-color: #fff;
  color: #000;
  text-shadow: 1px 1px #fff;
}
.button .small {
  font-size: 75%;
  padding: 3px 7px;
}
.button .small:active {
  padding: 4px 7px 2px;
  background-position: 0 top;
}
.button .large {
  font-size: 125%;
  padding: 7px 12px;
}
.button .large:active {
  padding: 8px 12px 6px;
  background-position: 0 top;
}
